{
  "name": "Page Redder",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Turns the page red when you click the icon",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches":["http://*/*","https://*/*"],
      "js": ["content-script.js"],
      "css": ["content.css"]
    }
  ]
}